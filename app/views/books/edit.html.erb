<h2>Editing Book</h2>
<% if @book.errors.any? %>
<div class = "errors_messages">
<h2><%= @book.errors.count %> error prohibited this book from being saved:</h2>
<ul>
  <% @book.errors.full_messages.each do |message| %>
  <li>
    <%= message %>
    <% end %>
  </li>
</ul>
<% end %>
</div>

<div class ="Newbook">
<%= form_with model: @book,url: book_path(@book.id), method: :patch do |f| %>
 <div class="Newbookblock">
 <h4>Title</h4>
 <%= f.text_field:title %>
 </div>
 <div class="Newbookblock">
 <h4>Body</h4>
 <%= f.text_area:body %>
 </div>
 <div class="Newbookblock">
 <%= f.submit 'Update Book' %>
  </div>
    <% end %>
</div>

<div>
  <%= link_to "show",book_path(@book.id) %>|<a href="/books">Back</a>
</div>